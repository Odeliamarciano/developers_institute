# Exercice0
basket = ["Banana", "Apples", "Oranges", "Blueberries"];
del basket[0]
del basket[2]
print(basket)

basket.append("kiwi")
print(basket)
basket.insert(0, 'Apples')
print(basket)

print(basket.count('Apples'))
del basket[:]
print(basket)

# Exercice1

my_fav_numbers = set([7])
my_fav_numbers.add(9)
my_fav_numbers.add(5)
print(my_fav_numbers)

my_fav_numbers.remove(7)

print(my_fav_numbers)

friend_fav_numbers = ([2, 4])

my_fav_numbers.update(friend_fav_numbers)
print(my_fav_numbers)

# Exercice2

mfav_numbers = (7, 9, 5)

ffav_numbers = (2, 4)

fav_numbers = mfav_numbers + ffav_numbers

print(fav_numbers)

