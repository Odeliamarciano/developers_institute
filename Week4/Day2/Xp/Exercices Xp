# Exercice4
pizza = []
e = 1
while e ==1:
    a = input("Enter another element")
    pizza.append(a)
    print(pizza)
    r = input("do you want to add another thing ? (yes or no)")
    if r=="yes":
        e=1
    else :
        e=0
        print("it's finished")

#Exercice5

age = int(input("enter your age"))

if age < 3:
    print("it's free for the kid")
elif 3 < age < 12:
    print("it's coast 10$")
else:
    print("it's coast 15$")

